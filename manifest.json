{
  "manifest_version": 3,
  "name": "Download MP4 + Right-Click Unlock",
  "version": "1.1.0",
  "description": "Easily find and download MP4 files from webpages and automatically re-enable right-click.",
  "permissions": [
    "contextMenus",
    "downloads",
    "scripting",
    "activeTab",
    "notifications",
    "storage",
    "tabs"             
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "Download MP4",
    "default_popup": "popup.html"
  }
}
